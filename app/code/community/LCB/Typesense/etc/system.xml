<?xml version="1.0"?>
<config>
    <tabs>
        <lcbrq translate="label" module="lcb_typesense">
            <label><![CDATA[<a href="http://lcbrq.com" target="_blank" style="position:absolute;margin-top:1px;display:inline-block;width:14px;height:14px;background-image: url('data:image/png;base64,')"></a><b style="padding-left: 19px">LCBRQ</b>]]></label>
            <sort_order>1200</sort_order>
        </lcbrq>
    </tabs>
    <sections>
        <lcb_typesense translate="label" module="lcb_typesense">
            <label>Typesense</label>
            <tab>lcbrq</tab>
            <frontend_type>text</frontend_type>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <connection translate="label"> 
                    <label>Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <verify>
                            <label>Verify</label>
                            <frontend_model>lcb_typesense/adminhtml_system_config_verify</frontend_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </verify>
                        <host translate="label">
                            <label>Host</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </host>
                        <collection_name translate="label">
                            <label>Collection Name</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </collection_name>                        
                        <admin_api_key translate="label">
                            <label>Admin API Key</label>
                            <frontend_type>obscure</frontend_type>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </admin_api_key>                        
                        <search_only_api_key translate="label">
                            <label>Search Only API Key</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </search_only_api_key>
                        <redirect_catalog_search>
                            <label>Redirect Catalog Search Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </redirect_catalog_search>
                    </fields>
                </connection>
                <autocomplete translate="label">
                    <label>Autocomplete</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <type translate="label">
                            <label>Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>lcb_typesense/system_config_source_autocomplete_type</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </type>
                    </fields>
                </autocomplete>
            </groups>
        </lcb_typesense>
    </sections>
</config>
